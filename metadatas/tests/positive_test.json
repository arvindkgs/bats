{
  "name": "Positive Checks",
  "description": "Post resizing validation checks for WLS (JDBS), JVM (WLS Cluster) Resizing, and OHS Tuning.",
  "logDir": "",
  "checks": [
    {
      "name": "JVM Checks",
      "compare": [
        {
          "name": "Single Compare",
          "source": {
            "property": "topology.wlsClusters.[clusterName = 'AdminServer'].Xms",
            "file": "metadatas/tests/source.json",
            "type": "JSON"
          },
          "target": {
            "property": "fusion.FADomain.AdminServer.default.minmaxmemory.main",
            "file": "metadatas/tests/target.properties",
            "type": "PROPERTY",
            "format": "-Xms{}?"
          }
        },
        {
          "name": "Dynamic Multiple",
          "dynamic": [
            {
              "file": "metadatas/tests/source.json",
              "type": "JSON",
              "property": "topology.wlsClusters.[].clusterName"
            }
          ],
          "source": {
            "file": "metadatas/tests/source.json",
            "type": "JSON",
            "property": "topology.wlsClusters.[clusterName = ${1}].Xms"
          },
          "target": {
            "file": "metadatas/tests/target.properties",
            "type": "PROPERTY",
            "property": "fusion.FADomain.${1}.default.minmaxmemory.main",
            "format": "-Xms{}?"
          }
        },
        {
          "name": "Dynamic + Changed format",
          "dynamic": [
            {
              "file": "metadatas/tests/source.json",
              "type": "JSON",
              "property": "topology.wlsClusters.[].clusterName"
            }
          ],
          "source": {
            "file": "metadatas/tests/source.json",
            "type": "JSON",
            "property": "topology.wlsClusters.[clusterName = ${1}].XX:ParallelGCThreads"
          },
          "target": {
            "file": "metadatas/tests/target.properties",
            "type": "PROPERTY",
            "property": "fusion.${1}.Linux-x86_64.memoryargs",
            "format": "-XX:ParallelGCThreads={}"
          }
        }
      ]
    }
  ]
}